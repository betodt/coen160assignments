package diaztostado.assign1;

public class FramedPicture {
	private Frame frame;
	private Picture picture;

	public FramedPicture() {
		this.frame = new Frame();
		this.picture = new Picture();
	}
	
	public FramedPicture(Frame frame, Picture picture) {
		this.frame = frame;
		this.picture = picture;
	}
	
	public Frame getFrame() {
		return this.frame;
	}
	
	public Picture getPicture() {
		return this.picture;
	}
	
	public void setFrame(Frame frame) {
		this.frame = frame;
	}
	
	public void setPicture(Picture picture) {
		this.picture = picture;
	}
	
	public boolean fits() {
		if (this.getPicture().Area() < this.getFrame().Area())
			return true;
		else
			return false;
			
	}
	
	public String toString() {
		return "This framed picture is by " + this.getPicture().getArtist() + " and the frame is made of " + this.getFrame().getMaterial();		
	}

}
